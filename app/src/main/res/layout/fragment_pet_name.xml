<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context=".fragments.PetNameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textSize="18sp"
            android:text="What is the name of your pet?"
            android:textAlignment="center"
            android:textColor="#0a304a" />

        <EditText
            android:id="@+id/petnameET"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/border_black"
            android:hint="Your pet name"
            android:padding="@dimen/_10sdp"
            android:textAlignment="center" />
        <ImageView
            android:id="@+id/arrowbuttonfrompetname"
            android:layout_marginTop="100dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/arrroww"
            />
    </LinearLayout>


</FrameLayout>